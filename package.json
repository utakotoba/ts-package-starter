{
  "name": "ts-package-starter",
  "type": "module",
  "version": "0.1.0-dev.1",
  "private": true,
  "description": "Project template for TypeScript package",
  "author": "Kohane <i@kept.to>",
  "license": "MIT",
  "homepage": "https://github.com/utakotoba/ts-package-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utakotoba/ts-package-starter.git"
  },
  "bugs": {
    "url": "https://github.com/utakotoba/ts-package-starter/issues"
  },
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "bun": "^1.3.2",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
